      <Button fx:id="closeButton" layoutX="92.0" layoutY="350.0" mnemonicParsing="false" onAction="#closeButtonOnAction" prefHeight="26.0" prefWidth="336.0" style="-fx-background-color: #ffff00;" text="Close" />
      <Label fx:id="registrationMessageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="88.0" layoutY="101.0" prefHeight="35.0" prefWidth="336.0" textFill="#ec0a0a">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="confirmPasswordLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="290.0" layoutY="247.0" prefHeight="18.0" prefWidth="137.0" textAlignment="CENTER" textFill="#d90606" />
   </children>
</AnchorPane>
